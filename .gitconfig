[core]
	editor = vim
	filemode = false
[color]
	ui = true
[credential]
	helper = cache --timeout=3600
[merge]
	tool = gvimdiff
[grep]
    linenumber = True
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[alias]
	last = log -1 --stat
        ap = add -p
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status
	b = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
        sm = submodule
        lt = describe --tags `git rev-list --tags --max-count=1`

[push]
	default = simple

[user]
        name = Akenaide
        email = kevinms1@gmail.com

[include]
    path = ~/.gitconfig.local
